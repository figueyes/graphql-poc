  "main": "dist/app.js",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "source-map-loader": "^1.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^8.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^5.56.1",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^2.5.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/yamljs": "^0.2.31",
    "apollo-server": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "axios": "^0.25.0",
    "build-url-ts": "^6.1.3",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "helmet": "^4.1.1",
    "http-status": "^1.5.0",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node-transpile-only ./src/index.ts",
    "start:dev:full": "npm run test:watch && npm run start:dev",
    "start": "node -r esm ./dist/src/index.js",
    "format": "npm run prettier && npm run lint:fix && npx tsc --removeComments",
    "lint": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\" --fix",
    "test": "NODE_ENV=test ./node_modules/.bin/jest --ci --color --detectOpenHandles --forceExit --verbose",
    "test:watch": "npm test --watch",
    "test:integration": "NODE_ENV=test ./node_modules/.bin/jest --roots=./__tests__/integration",
    "test:unit-coverage": "npm test --coverage --roots=./__tests__/unit",
    "prettier": "prettier --config .prettierrc \"src/**/*.ts\" --write"
  }
}
